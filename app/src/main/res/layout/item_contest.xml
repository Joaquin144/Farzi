<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:translationZ="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvContestDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contest Description"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvContestId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        app:layout_constraintStart_toStartOf="@+id/tvContestDescription"
        app:layout_constraintTop_toBottomOf="@+id/tvContestDescription"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvContestDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:text="duration"
        app:layout_constraintBottom_toBottomOf="@+id/tvContestId"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvContestTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Someday before Resurrection"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/tvContestId"
        app:layout_constraintTop_toBottomOf="@+id/tvContestId" />
</androidx.constraintlayout.widget.ConstraintLayout>